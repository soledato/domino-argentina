---

const { title, content, clients, about } = Astro.props

---

<section id="nosotros" class="anim-wrapper bs-container bs-mt-lg grid">

  <!-- Title -->
  { title && <h2 class="bs-h2 text-left" set:html={ title } />}
  { content && <p class="pt-6 bs-text text-left text-sm lg:text-lg line-clamp-4 lg:line-clamp-none" set:html={ content } />}

  <!-- Logos -->
  <div class="bs-mt-md grid grid-cols-1 md:grid-cols-4 gap-4 ">

    <!-- Logo link -->
     {
      about.map( item =>

          <div class="p-4 bg-bs-surface-2/70 hover:translate-y-7 hover:translate-x-7 gap-4 align-bottom items-left flex-col md:hover:scale-[1.3] ease-bs-bounce transition-all duration-1000 group md:hover:bg-black/70">
            <div class="flex flex-col items-left justify-center gap-2 ">

            <img
              src={ item.image }
              alt={ item.title }
              class="h-30 w-30 rounded-full mx-auto items-start flex flex-col "
              width="128"
              height="128"
              loading="lazy"
              >
            <h1 class="text-[#f4b431] font-semibold text-xl justify-center - align-items-center flex place-content-center group-hover:scale-[1.3] group-hover:-translate-y-1 group-hover:opacity-100  ease-bs-bounce transition-all duration-1000">
              {item.title}
            </h1>
              </div>
            <p class="text-sm text-center p-4">
              {item.description}
            </p>
          </div>

        

      )

    }

  </div>

</section>
